{ pkgs, ... }:

rec {
  imports = [
    <nixpkgs/nixos/modules/profiles/qemu-guest.nix>
    ./base.nix
  ];

  boot = {
    loader.grub.device = "/dev/vda";
  };

  environment.systemPackages = with pkgs; [
    aspell
    aspellDicts.en
    bind
    weechat
  ];

  fileSystems."/" = { device = "/dev/vda1"; fsType = "ext4"; };

  networking = {
    defaultGateway = "45.55.128.1";
    defaultGateway6 = "2604:a880:800:10::1";

    firewall = {
      allowedTCPPorts = [
        22 # ssh
        80 # http
        443 # https
      ];
    };

    hostName = "xenon";

    interfaces = {
      eth0 = {
        ip4 = [
          { address="45.55.132.201"; prefixLength=18; }
          { address="10.17.0.5"; prefixLength=16; }
        ];
        ip6 = [
        { address="2604:a880:800:10::1ce7:d001"; prefixLength=60; }
        ];
      };
      eth1 = {
        ip4 = [
          { address="10.132.76.148"; prefixLength=16; }
        ];
        ip6 = [
        ];
      };
    };

    nameservers = [
      "2001:4860:4860::8844"
      "2001:4860:4860::8888"
      "8.8.8.8"
    ];
  };

  programs.mosh.enable = true;

  services = {
    nginx = {
      enable = true;
      recommendedGzipSettings = true;
      recommendedOptimisation = true;
      recommendedProxySettings = true;
      recommendedTlsSettings = true;

      virtualHosts = {
        "mythmon.com" = {
          globalRedirect = "www.mythmon.com";
        };
      };
    };

    openssh.enable = true;

    udev.extraRules = ''
      KERNEL=="eth*", ATTR{address}=="56:3d:61:1a:6a:67", NAME="eth0"
      KERNEL=="eth*", ATTR{address}=="42:0d:d4:f3:53:61", NAME="eth1"
    '';
  };

  users = {
    users = let
      keys = {
        mythmon_gallium = "ssh-rsa  mythmon@gallium";
        mythmon_gmail = "ssh-rsa  mythmon@gmail.com";
        uberj_blue = "ssh-rsa  uberj@blue";
        uberj_carbon = "ssh-rsa  uberj@uberj-ThinkPad-X1-Carbon";
      };

    in {
      root = {
        openssh.authorizedKeys.keys = [ keys.mythmon_gallium keys.mythmon_gmail ];
      };

      mythmon = {
        createHome = true;
        extraGroups = [ "wheel" ];
        isNormalUser = true;
        openssh.authorizedKeys.keys = [ keys.mythmon_gallium keys.mythmon_gmail ];
        shell = "/run/current-system/sw/bin/zsh";
      };

      uberj = {
        createHome = true;
        isNormalUser = true;
        openssh.authorizedKeys.keys = [ keys.uberj_blue keys.uberj_carbon ];
      };
    };
  };
}
